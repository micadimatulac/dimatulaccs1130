        <br>
        <h2> Nth Factorial, Sum, and Average </h2>
        <label for = "nth_number"> Enter Integer: </label>
        <input type = "number" id = "nth_number">

        <label for = "calculation_scale"> Select Calculation Scale: </label>
        <select id = "calculation_scale">
            <option value = "nth_factorial"> Factorial </option>
            <option value = "nth_sum"> Sum </option>
            <option value = "nth_average"> Average </option>
        </select>

        <br>
        <button id = "button_calculate"> Calculate </button>

        <div id = "results"></div>
    </main>

    <div class = "modal" id = "no_input_modal">
        <div class = "modal-content">
            <p> Please enter a valid integer and click 'Calculate'. </p>
            <button onclick = "close_modal()"> OK </button>
        </div>
    </div>

    <script>
        function calculate() {
            var nth_number = parseInt(document.getElementById("nth_number").value);
            var calculation_scale = document.getElementById("calculation_scale").value; 
            var results = document.getElementById("results");
            var factorial = 1;
            var sum = 0;
            var average = 0;
            var counter = 1;
        
            if (isNaN(nth_number)) {
                open_modal(no_input_modal);
                return;
            }

            if (calculation_scale == "nth_factorial") {
                while (counter <= nth_number) {
                    factorial *= counter;
                    counter = counter + 1;
                }
            results.innerHTML = "The factorial of " + nth_number + " is: " + factorial;
            }

            else if (calculation_scale == "nth_sum") {
                do {
                    sum += counter;
                    counter = counter + 1;
                }

                while (counter <= nth_number);
            results.innerHTML = "The sum of numbers from 1 to " + nth_number + " is: " + sum;
            }

            else if (calculation_scale == "nth_average") {
                for (counter = 1; counter <= nth_number; counter++) {
                    sum += counter;
                }
                average = sum / nth_number;
            results.innerHTML = "The average of numbers from 1 to " + nth_number + " is: " + average;
            }
        } // END function calculate ()

        function open_modal(modal) {
            modal.style.display = "block";
        } // END function open_modal(modal)

        function close_modal() {
            var modals = document.getElementsByClassName("modal");
            for (var i = 0; i < modals.length; i++) {
                modals[i].style.display = "none";
            }
        } // END function close_modal
        document.getElementById("button_calculate").addEventListener("click", calculate);
    </script>
